<?xml version="1.0"?>
<block>
  <name>Add Tag at Offset</name>
  <key>tagutils_add_tag_at_offset</key>
  <category>Tag Utils</category>
  <import>import tagutils</import>
  <make>tagutils.add_tag_at_offset($tag_key, $tag_offset, $tag_val, $debug)</make>

  <param>
    <name>Name</name>
    <key>tag_key</key>
    <type>string</type>
  </param>

  <param>
    <name>Offset</name>
    <key>tag_offset</key>
    <value>[0]</value>
    <type>raw</type>
  </param>

  <param>
    <name>Value</name>
    <key>tag_val</key>
    <value>0</value>
    <type>int</type>
  </param>


  <param>
    <name>Debug</name>
    <key>debug</key>
    <value>False</value>
    <type>bool</type>
      <option>
        <name>On</name>
        <key>True</key>
      </option>
      <option>
        <name>Off</name>
        <key>False</key>
      </option>
  </param>      
     

  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>


  <source>
    <name>out</name>
    <type>complex</type>
  </source>
</block>
